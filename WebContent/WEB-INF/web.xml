<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>WebByMyselfEdit</display-name>
  <servlet>
    <servlet-name>AccountServlet</servlet-name>
    <servlet-class>controller.AccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AccountServlet</servlet-name>
    <url-pattern>/accountList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductDelete</servlet-name>
    <servlet-class>controller.ProductDelete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductDelete</servlet-name>
    <url-pattern>/reProduct.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadHanding</servlet-name>
    <servlet-class>controller.UploadHanding</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadHanding</servlet-name>
    <url-pattern>/UploadFiles</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>controller.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/shoppingcart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductManagerServlet</servlet-name>
    <servlet-class>controller.ProductManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductManagerServlet</servlet-name>
    <url-pattern>/ProductManager</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>ConnectionPool</description>
    <res-ref-name>jdbc/personalweb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>